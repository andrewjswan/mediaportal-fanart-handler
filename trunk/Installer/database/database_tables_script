BEGIN TRANSACTION;
CREATE TABLE Image (Id TEXT PRIMARY KEY, Category TEXT, Provider TEXT, Key1 TEXT, Key2 TEXT, FullPath TEXT, SourcePath TEXT, AvailableRandom TEXT, Enabled TEXT, DummyItem TEXT, Time_Stamp TEXT);
CREATE INDEX Key1EnabledCategory ON Image (Key1,Enabled, Category);
CREATE INDEX Key1Enabled ON Image (Key1,Enabled);
CREATE INDEX EnabledAvailableRandomCategory ON Image (Enabled,AvailableRandom,Category);
CREATE INDEX Category ON Image (Category);
CREATE INDEX Key1Key2Category ON Image (Key1,Key2, Category);
CREATE INDEX Key1CategoryDummyItem ON Image (Key1,Category,DummyItem);
CREATE INDEX CategoryTimeStamp ON Image (Category,Time_Stamp);
CREATE TABLE Game_Fanart (Id INTEGER PRIMARY KEY, Artist TEXT, Disk_Image TEXT, Source_Image TEXT, Source TEXT, Type TEXT, Enabled TEXT, Time_Stamp TEXT, restricted NUMERIC);
CREATE TABLE Movie_Fanart (Id INTEGER PRIMARY KEY, Artist TEXT, Disk_Image TEXT, Source_Image TEXT, Source TEXT, Type TEXT, Enabled TEXT, Time_Stamp TEXT, restricted NUMERIC);
CREATE TABLE MovingPicture_Fanart (Id INTEGER PRIMARY KEY, Artist TEXT, Disk_Image TEXT, Source_Image TEXT, Source TEXT, Type TEXT, Enabled TEXT, Time_Stamp TEXT, restricted NUMERIC);
CREATE TABLE Music_Artist (Id INTEGER PRIMARY KEY, Artist TEXT, Successful_Scrape NUMERIC, Time_Stamp TEXT, successful_thumb_scrape NUMERIC);
CREATE TABLE Music_Fanart (Id INTEGER PRIMARY KEY, Artist TEXT, Disk_Image TEXT, Source_Image TEXT, Source TEXT, Type TEXT, Enabled TEXT, Time_Stamp TEXT, restricted NUMERIC);
CREATE TABLE Picture_Fanart (Id INTEGER PRIMARY KEY, Artist TEXT, Disk_Image TEXT, Source_Image TEXT, Source TEXT, Type TEXT, Enabled TEXT, Time_Stamp TEXT, restricted NUMERIC);
CREATE TABLE Plugin_Fanart (Id INTEGER PRIMARY KEY, Artist TEXT, Disk_Image TEXT, Source_Image TEXT, Source TEXT, Type TEXT, Enabled TEXT, Time_Stamp TEXT, restricted NUMERIC);
CREATE TABLE Scorecenter_Fanart (Id INTEGER PRIMARY KEY, Artist TEXT, Disk_Image TEXT, Source_Image TEXT, Source TEXT, Type TEXT, Enabled TEXT, Time_Stamp TEXT, restricted NUMERIC);
CREATE TABLE TVSeries_Fanart (Id INTEGER PRIMARY KEY, Artist TEXT, Disk_Image TEXT, Source_Image TEXT, Source TEXT, Type TEXT, Enabled TEXT, Time_Stamp TEXT, restricted NUMERIC);
CREATE TABLE TV_Fanart (Id INTEGER PRIMARY KEY, Artist TEXT, Disk_Image TEXT, Source_Image TEXT, Source TEXT, Type TEXT, Enabled TEXT, Time_Stamp TEXT, restricted NUMERIC);
CREATE TABLE Version (Id INTEGER PRIMARY KEY, Version TEXT, Time_Stamp TEXT);
CREATE INDEX Idx_Music_Artist_Artist ON Music_Artist(Artist ASC);
CREATE INDEX Idx_Music_Fanart_Artist ON Music_Fanart(Artist ASC);
CREATE INDEX Idx_Music_Fanart_Disk_Image ON Music_Fanart(Disk_Image ASC);
CREATE INDEX Idx_Music_Fanart_Source_Image ON Music_Fanart(Source_Image ASC);
CREATE INDEX Idx_Music_Fanart_Type ON Music_Fanart(Type ASC);
CREATE TABLE TimeStamps (Id INTEGER PRIMARY KEY, Key TEXT, Value TEXT, Time_Stamp TEXT);
CREATE TABLE Music_Album (Id INTEGER PRIMARY KEY, Artist TEXT, Album TEXT, Successful_Scrape NUMERIC, Time_Stamp TEXT);
COMMIT;
